<div class="container px-4 pt-4">
  <h1>Articles</h1>
  <br>
  <%= link_to new_article_path, class: 'btn btn-primary' do %>
    <i class="fa-regular fa-square-plus"></i> Add a new article
  <% end %>
  <br>
  <br>
  <ul>
    <% @articles.each do |article| %>
    <li><%= link_to article.title, article_path(article.id) %> | <%= link_to article_path(article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
    </li>
    <% end %>
  </ul>
</div>
